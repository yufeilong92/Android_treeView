        <LinearLayout
            android:id="@+id/line_Pay_Layout"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_32"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/tv_pay_type"
                android:textSize="@dimen/font_12" />

            <EditText
                android:maxLength="10"
                android:id="@+id/et_Pay_Apply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/mdtp_white"
                android:textSize="@dimen/font_12" />
        </LinearLayout>

        <LinearLayout

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_32"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/font_12"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_charge" />

            <TextView
                android:textSize="@dimen/font_12"
                android:background="@color/beige"
                android:layout_weight="3"
                android:id="@+id/tv_charge_Apply"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/margin_32">
            <TextView
                android:textSize="@dimen/font_12"
                android:layout_weight="2"
                android:text="@string/tv_halve_case"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_12"
                android:layout_weight="3"
                android:background="@color/beige"
                android:id="@+id/tv_halve_Apply"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>